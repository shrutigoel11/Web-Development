<%layout("/layouts/boilerplate")-%>
  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <br /><br />
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="form-control">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="enter catchy title" type="text" class="form-control"/>
    </div>
      <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description" class="form-control"></textarea>
      </div> 
      <br /><br />
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>      
        <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
      </div>

      <br /><br />
      <div class="row">
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="3000" type="number" class="form-control" />
      </div> 
      <br /><br />
      
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" />
      </div>
    </div>
      <br /><br />
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        name="listing[location]"
        placeholder="Delhi"
        type="text"
        class="form-control"
      />
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br /><br />
    </form>
  </div>
    </div>
  </body>
