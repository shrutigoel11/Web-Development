<%layout("/layouts/boilerplate")-%>
<body>
  <div class="row mt-4">
    <div class="col-8 offset-4">
      <h3>Listing Details :</h3>
      <div class="card col-6  mt-5">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="listing-image"
        />
        <div class="card-body">
          <p class="card-text">
          <b><%= listing.title %></b><br/>
            <%= listing.description %><br/>
     &#8377; <%= listing.price.toLocaleString("en-IN") %><br/>
              <%= listing.location %><br/>
              <%= listing.country %><br/>
        </p>
        </div>
      </div>
      
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn  mt-1">Edit this Listing</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark  mb-5 mt-2">Delete this listing</button>
      </form>
    </div>
  </div>
</body>
